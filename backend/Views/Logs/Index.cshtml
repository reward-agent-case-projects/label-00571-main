@model IEnumerable<Dqsm.Backend.Models.Logs>

@{
    ViewData["Title"] = "System Logs";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-journal-code text-danger"></i> System Audit Logs</h2>
        <p class="text-muted">Static Log Service Record (Action, InfoType, Info)</p>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" style="font-size: 0.9rem;">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%">ID</th>
                        <th style="width: 15%">Time</th>
                        <th style="width: 10%">Level</th>
                        <th style="width: 20%">Action</th>
                        <th style="width: 50%">Info (JSON)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                @if (item.InfoType == "error")
                                {
                                    <span class="badge bg-danger">ERROR</span>
                                }
                                else if (item.InfoType == "debug")
                                {
                                    <span class="badge bg-warning text-dark">DEBUG</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">INFO</span>
                                }
                            </td>
                            <td><code>@item.Action</code></td>
                            <td class="text-break font-monospace text-muted">@item.Info</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
