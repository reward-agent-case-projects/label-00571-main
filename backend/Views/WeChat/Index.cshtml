@model IEnumerable<Dqsm.Backend.Models.UserMsg>

@{
    ViewData["Title"] = "WeChat Messages";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2><i class="bi bi-chat-dots-fill text-primary"></i> User Messages</h2>
        <p class="text-muted">Real-time interaction log from WeChat Users</p>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-primary" onclick="simulateReceive()">
            <i class="bi bi-play-circle"></i> Simulate Receive
        </button>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>From User</th>
                        <th>To User</th>
                        <th>Message</th>
                        <th>Received At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><span class="badge bg-info text-dark">@item.FromUser</span></td>
                            <td>@item.ToUser</td>
                            <td>@item.Message</td>
                            <td>@item.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    async function simulateReceive() {
        const payload = {
            FromUser: "oX9s_User_" + Math.floor(Math.random() * 1000),
            ToUser: "gh_DQSM_Official",
            Message: "Hello, this is a test message at " + new Date().toLocaleTimeString()
        };

        try {
            const response = await fetch('/WeChat/ReceiveMessage', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            if (response.ok) {
                alert('Message Simulated Successfully! Page will reload.');
                location.reload();
            } else {
                alert('Failed to simulate message.');
            }
        } catch (e) {
            console.error(e);
            alert('Error calling API');
        }
    }
</script>
